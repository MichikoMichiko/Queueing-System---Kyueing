
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kyueng</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kyueng.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Poppins', sans-serif;
        }
        .nav-item {
            position: relative;
            display: block;
        }

            .nav-item a {
                display: flex;
                align-items: center;
                justify-content: flex-start;
                padding: 15px 20px;
                color: white;
                background-color: #483D8B;
                position: relative;
                z-index: 1;
                text-decoration: none;
                transition: padding 0.3s ease, background-color 0.3s ease;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .nav-item a:hover {
                    padding-left: 30px;
                    padding-right: 10px;
                    color: black;
                    background-color: #5A4DA0; /* subtle shade change */
                    box-shadow: 3px 5px 10px rgba(0, 0, 0, 0.08);
                }

            .nav-item.active a {
                background-color: #5A4DA0;
                box-shadow: inset 10px 0 0 #3D365C;

            }


            /* Pseudo-elements to create the cut-out on the left */
            .nav-item.active::before,
            .nav-item.active::after {
                content: "";
                position: absolute;
                right: -15px; /* now on the left side */
                width: 30px;
                height: 30px;
                background: white;
                z-index: 2;
                transition: all 0.3s ease;
            }

            .nav-item.active::before {
                top: 0;
                border-bottom-right-radius: 30px; /* flipped from left to right */
                transition: padding 0.3s ease, background-color 0.3s ease;
            }

            .nav-item.active::after {
                bottom: 0;
                border-top-right-radius: 30px; /* flipped from left to right */
                transition: padding 0.3s ease, background-color 0.3s ease;
            }



        .sidebar {
            background-color: #483D8B;
            color: white;
            width: 250px;
            height: 100vh;
            position: fixed;
        }

        .main-content {
            margin-left: 250px;
            background-color: white;
            padding: 2rem;
        }


    </style>
</head>
<body>
    
        <nav class="sidebar">
        <div class="text-center mb-4" style>
            <img style="width:230px; margin-bottom: 35px; margin-top: 20px;" src="@Url.Content("~/img/src/kyueng2.png")" />

        </div>

        <ul class="nav flex-column">
            <li class="nav-item  @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                <b></b><b></b>
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><b>Home</b></a>
            </li>
            <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Register" ? "active" : "")">
                <b></b><b></b>
                <a class="nav-link" asp-area="" asp-controller="Student" asp-action="Register"><b>Register</b></a>
            </li>
            <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "OfficeDeskDashboard" ? "active" : "")">
                <b></b><b></b>
                <a class="nav-link" asp-area="" asp-controller="QueueCall" asp-action="OfficeDeskDashboard"><b>Desk</b></a>
            </li>
            <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "ViewStudents" ? "active" : "")">
                <b></b><b></b>
                <a class="nav-link" asp-area="" asp-controller="Student" asp-action="ViewStudents"><b>Students</b></a>
            </li>
            <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "History" ? "active" : "")">
                <b></b><b></b>
                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="History"><b>History</b></a>
            </li>
            <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Logout" ? "active" : "")">
                <b></b><b></b>
                <a class="nav-link" onclick="return confirmLogoutAndPost();" asp-area="" asp-controller="Account" asp-action="Logout"><b>Logout</b></a>
            </li>
           


        </ul>

        </nav>

       
    
    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>


    </div>


   
    
    @await RenderSectionAsync("Scripts", required: false)
    <script>
            function confirmLogoutAndPost() {
            if (!confirm("Are you sure you want to log out?")) {
                return false; // Cancel logout
            }

            // Create a form dynamically and submit it via POST
            var form = document.createElement('form');
            form.method = 'post';
            form.action = '@Url.Action("Logout", "Account")';

            // Add anti-forgery token if you have one (recommended)
            var token = document.querySelector('input[name="__RequestVerificationToken"]');
            if(token) {
                var input = document.createElement('input');
                input.type = 'hidden';
                input.name = '__RequestVerificationToken';
                input.value = token.value;
                form.appendChild(input);
            }

            document.body.appendChild(form);
            form.submit();
            return false; // Prevent default link action
        }
    </script>
    
</body>
</html>
